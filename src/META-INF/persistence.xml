<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.1"
	xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">
	<persistence-unit name="lifefit-jpa">
		<class>com.lifefit.soap.model.Person</class>
		<class>com.lifefit.soap.model.LifeStatus</class>					
		<class>com.lifefit.soap.model.Measure</class>
		<class>com.lifefit.soap.model.Activity</class>
		<class>com.lifefit.soap.model.Goal</class>
		<class>com.lifefit.soap.model.HealthMeasureHistory</class>
		<class>com.lifefit.soap.model.APIConfig</class>		
		<properties>  
			<property name="javax.persistence.jdbc.driver" value="com.mysql.jdbc.Driver" />                        
            <property name="javax.persistence.jdbc.url" value="jdbc:mysql://us-cdbr-iron-east-03.cleardb.net/heroku_b1b6a6c4a8b6258?autoReconnect=true" />		
            <property name="javax.persistence.jdbc.user" value="${user}" />
            <property name="javax.persistence.jdbc.password" value="${password}" />
			<property name="eclipselink.logging.level" value="INFO" />
			<property name="eclipselink.target-database" value="Database" />
			
			<!-- eclipselink connection pool configuration -->
			<property name="eclipselink.connection-pool.default.initial" value="5" />   
			<property name="eclipselink.connection-pool.node2.min" value="5"/> 
			<property name="eclipselink.connection-pool.node2.max" value="50"/>  
			<property name="eclipselink.connection-pool.node2.wait" value="10000"/>
			<property name="eclipselink.connection-pool.node2.url" value="jdbc:mysql://us-cdbr-iron-east-03.cleardb.net/heroku_b1b6a6c4a8b6258"/>
			<property name="eclipselink.connection-pool.node2.user" value="${user}" />
            <property name="eclipselink.connection-pool.node2.password" value="${password}" />
		</properties>
	</persistence-unit>
</persistence>
